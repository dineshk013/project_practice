{
  "info": {
    "name": "RevCart Order Flow Testing",
    "description": "Complete order flow testing collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. User Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/users/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "users", "login"]
        }
      }
    },
    {
      "name": "2. Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": 1,\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/cart/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "cart", "add"]
        }
      }
    },
    {
      "name": "3. Get Cart",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/api/cart",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "cart"]
        }
      }
    },
    {
      "name": "4. Checkout Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-User-Id",
            "value": "1"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"addressId\": 1,\n  \"paymentMethod\": \"RAZORPAY\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/orders/checkout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "checkout"]
        }
      }
    },
    {
      "name": "5. Process Dummy Payment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": 12,\n  \"userId\": 1,\n  \"amount\": 1234.56,\n  \"paymentMethod\": \"RAZORPAY\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/payments/dummy",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "payments", "dummy"]
