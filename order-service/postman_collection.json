{
  "info": {
    "name": "Order Service API",
    "description": "RevCart Order Service Endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Order Operations",
      "item": [
        {
          "name": "Checkout",
          "request": {
            "method": "POST",
            "header": [
              {"key": "X-User-Id", "value": "2"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"addressId\": 1,\n  \"paymentMethod\": \"RAZORPAY\"\n}"
            },
            "url": {
              "raw": "http://localhost:8084/api/orders/checkout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders", "checkout"]
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "X-User-Id", "value": "2"}],
            "url": {
              "raw": "http://localhost:8084/api/orders",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Order By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8084/api/orders/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders", "1"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "http://localhost:8084/api/orders/1/status?status=CONFIRMED",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders", "1", "status"],
              "query": [{"key": "status", "value": "CONFIRMED"}]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [{"key": "X-User-Id", "value": "2"}],
            "url": {
              "raw": "http://localhost:8084/api/orders/1/cancel",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders", "1", "cancel"]
            }
          }
        },
        {
          "name": "Validate Order (Internal)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8084/api/orders/validate?orderId=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["api", "orders", "validate"],
              "query": [{"key": "orderId", "value": "1"}]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Actuator Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8084/actuator/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8084",
              "path": ["actuator", "health"]
            }
          }
        }
      ]
    }
  ]
}
